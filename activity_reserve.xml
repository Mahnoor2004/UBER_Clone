<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1C1C1C"
    android:padding="16dp">

    <!-- Back Arrow Icon -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:contentDescription="Back"
        android:tint="#FFFFFF" />

    <!-- Image Section (Placeholder for the illustration) -->
    <ImageView
        android:id="@+id/illustration"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Illustration"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_reserve" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserve"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Feature Descriptions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- First Feature -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_access_time_filled_24"
                android:tint="#FFFFFF"
                android:contentDescription="Calendar Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose your exact pick-up time up to 90 days in advance"
                android:textColor="#BBBBBB"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Second Feature -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_hourglass_empty_24"
                android:tint="#FFFFFF"
                android:contentDescription="Hourglass Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extra wait time included to meet your trip"
                android:textColor="#BBBBBB"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Third Feature -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_cancel_24"
                android:tint="#FFFFFF"
                android:contentDescription="Cancel Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel at no charge up to 60 minutes in advance"
                android:textColor="#BBBBBB"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Spacer to push the button to the bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Reserve Button -->
    <Button
        android:id="@+id/btnReserveTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Reserve a trip"
        android:backgroundTint="#E0E0E0"
        android:textColor="#000000" />
</LinearLayout>
